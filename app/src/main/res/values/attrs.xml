<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PileupView">
        <attr name="pileup_maxNum" format="integer"/>
        <attr name="pileup_imageSize" format="dimension"/>
        <attr name="pileup_ratio" format="float"/>
        <attr name="pileup_images" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="PhotoGridView">
        <attr name="photos" format="reference"/>
        <attr name="editable" format="boolean"/>
        <attr name="itemOnClickListener" format="reference"/>
        <attr name="addMoreOnClickListener" format="reference"/>
        <attr name="spacing" format="dimension"/>
        <attr name="maxnum" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CollapseHeadBar">
        <attr name="collapseheaderbar_name" format="string"/>
        <attr name="collapseheaderbar_title" format="string"/>
        <attr name="collapseheaderbar_avatar" format="string"/>
        <attr name="collapseheaderbar_backgroundimg" format="string"/>
        <attr name="collapseheaderbar_onLeftClick" format="reference"/>
        <attr name="collapseheaderbar_onMenuItemClick" format="reference"/>
        <attr name="collapseheaderbar_menuItems" format="reference"/>
        <attr name="collapseheaderbar_inviteeCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name ="ScalableLayout">
        <attr name ="scalablelayout_expandheight" format="dimension"/>
        <attr name ="scalablelayout_hideheight" format="dimension"/>
        <attr name ="scalablelayout_collapseheight" format="dimension"/>
        <attr name ="scalablelayout_onStatusChange" format="reference"/>
        <attr name="scalablelayout_status" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ITimeShootMenu">
        <attr name="shoot_collapseIcon" format="reference"/>
        <attr name="shoot_expandIcon" format = "reference"/>
        <attr name="shoot_buttonSize" format="dimension"/>
        <attr name="shoot_expandDirection" format="enum">
            <enum name="up" value="0"/>
            <enum name="down" value="1"/>
            <enum name="left" value="2"/>
            <enum name="right" value="3"/>
        </attr>
        <attr name="shoot_itemSpacing" format="dimension"/>
        <attr name="shoot_buttonBottomMargin" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FixSizeListView">
        <attr name="max_show_c" format="integer"/>
        <attr name="scroll_enable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="BadgeView">
        <attr name="numberColor" format="color"/>
        <attr name="bgColor" format="color"/>
        <attr name="number" format="string"/>
    </declare-styleable>
</resources>