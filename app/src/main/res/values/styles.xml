<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#222222</item>
        <item name="colorControlHighlight">#222222</item>
    </style>

    <style name="ITimeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name = "android:windowBackground">@color/app_bg</item>
    </style>

    <style name="PileupStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "org.unimelb.itime:pileup_ratio">0.5</item>
        <item name="org.unimelb.itime:pileup_maxNum">3</item>
        <item name="org.unimelb.itime:pileup_imageSize">20dp</item>
    </style>

    <style name="ItimeRelativeCell">
        <item name="android:layout_height">@dimen/standard_detail_cell_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ItimeRelativeCell44" parent="ItimeRelativeCell">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">44dp</item>
    </style>

    <style name="ItimeCellLeftIcon">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="itimeCellTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">157dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">19dp</item>
        <item name="android:textColor">@color/cell_name</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">45dp</item>
    </style>

    <style name="itimeCellEdit" parent="itimeCellTitle">
        <item name="android:background">@color/transparent</item>
        <item name="android:minWidth">191dp</item>
        <item name="android:maxLength">286</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="itimeCellRightContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pinkishGrey</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="itimeCellRightIcon">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">14dp</item>
    </style>

    <style name="ItimeDisclosure">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/icon_event_disclosure</item>
    </style>

    <style name="itime_bottom_divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_line</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="itime_top_divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_line</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="TabBarStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/meeting_tab_selected</item>
        <item name="tabTextColor">@color/meeting_tab_regular</item>
        <item name="tabIndicatorColor">@color/brightBlue</item>
    </style>

    <style name="ListLableTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">@dimen/font_tiny</item>
        <item name="android:textColor">@color/warmGrey</item>
        <item name="android:background">@color/fragment_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--the right arrow of each item in event detail page-->
    <style name="arrow_disclosure_indicator">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:background">@drawable/icon_calendar_arrowright</item>
    </style>

    <!--cell name-->
    <style name="itime_blacktitle_17sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--for setting, subtitle on right, beside the right arrow-->
    <style name="itime_subtitle_15sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:textColor">@color/text_detail_label</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--toolbar style-->
    <style name="itime_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">@drawable/bg_divider_top_bottom</item>
    </style>
</resources>
