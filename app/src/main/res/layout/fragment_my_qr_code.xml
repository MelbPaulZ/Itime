<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="org.unimelb.itime.bean.User"/>
        <variable
            name="viewModel"
            type="org.unimelb.itime.ui.viewmodel.contact.MyQRCodeVieModel"/>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/toolbar"
        app:vm="@{toolbarVM}"/>
    <include layout="@layout/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:id="@+id/QRCodeView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <org.unimelb.itime.widget.RoundImageView
                android:layout_width="57dp"
                android:layout_height="57dp"
                app:smallAvatar="@{viewModel.user.photo}"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/avatarView"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:text="@{viewModel.user.personalAlias}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_huge"
                    android:id="@+id/nameTextView"
                    android:textColor="@color/text_body"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:visibility="@{viewModel.showGender?View.VISIBLE:View.GONE}"
                    android:src="@{viewModel.user.gender.equals(User.MALE)?@drawable/icon_contacts_male:@drawable/icon_contacts_female}"
                    android:layout_toRightOf="@id/nameTextView"
                    android:layout_alignBottom="@id/nameTextView"/>

                <TextView
                    android:text="@{viewModel.user.region}"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_body"
                    android:textSize="@dimen/font_middle"
                    android:visibility="@{viewModel.user.region.empty?View.GONE:View.VISIBLE}"
                    android:id="@+id/contactTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/nameTextView"/>
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22.5dp">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:qrcode="@{viewModel.myQRCode}"
            />
            <RelativeLayout
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/bg_shadow"
                android:layout_centerInParent="true">
            <org.unimelb.itime.widget.RoundRectImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:smallAvatar="@{viewModel.user.photo}"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/my_qr_code_explain"
            android:textColor="@color/text_body"
            android:textSize="@dimen/font_middle"/>
    </LinearLayout>
    </RelativeLayout>

</LinearLayout>
</layout>