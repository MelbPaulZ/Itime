<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/itime_round_corner_card_bg_bordered"
    android:padding="0.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <!-- right detail block -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info_container"
        android:background="@drawable/itime_round_corner_card_bg_tr_br"
        android:layout_marginLeft="52dp"
        android:padding="10dp"
        android:orientation="vertical">
        <!-- title block-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_photo"
                android:layout_alignParentStart="true"
                android:src="@drawable/default_image"
                />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/updated_time_text"
                android:layout_alignParentEnd="true"
                android:layout_alignBaseline="@id/profile_photo"
                android:gravity="right"
                android:textSize="11sp"
                android:textColor="#BDBDBD"
                android:text="5:26"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_text"
                android:gravity="left|center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/profile_photo"
                android:layout_toStartOf="@id/updated_time_text"
                android:textSize="14sp"
                android:text="Telstaw Telstaw Telstaw"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="19sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:id="@+id/title_text"
            android:text="Telstaw TelstawTelstaw Telstaw Telstaw"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grating_text"
            android:gravity="left"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:text="Telstaw TelstawTelstaw Telstaw Telstaw"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reminder_text"
            android:gravity="left"
            android:layout_marginTop="8dp"
            android:textSize="11sp"
            android:textColor="#BDBDBD"
            android:text="in 2d 2h"/>
    </LinearLayout>

    <!-- left status bar-->
    <LinearLayout
        android:id="@+id/status_bar"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/itime_round_corner_card_bg_tl_bl"
        android:layout_alignTop="@id/info_container"
        android:layout_alignBottom="@id/info_container"
        >
        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_meetings_vote" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/vote" />
    </LinearLayout>
</RelativeLayout>