<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="contentVM"
            type="org.unimelb.itime.ui.viewmodel.CalendarViewModel"/>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include layout="@layout/toolbar"
            bind:vm="@{toolbarVM}"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_divider_top_bottom"
            android:paddingLeft="16dp"
            android:paddingRight="17dp"
            android:gravity="center_vertical|left"
            android:hint="@string/calendar_name"
            android:textColorHint="@color/pinkishGrey"
            android:text="@={contentVM.calendar.summary}"
            android:textSize="@dimen/font_large"
            android:textColor="@color/black"
            bind:textWatcher="@{contentVM.onEditTextChanged()}"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@{contentVM.deleteClickable==1? @color/red : @color/whiteTwo}"
                android:background="@drawable/bg_divider_top_bottom"
                android:textSize="@dimen/font_large"
                android:clickable="@{contentVM.deleteClickable==1? true:false}"
                android:onClick="@{contentVM.onDeleteCalendarClick()}"
                android:text="Delete Calendar"
                />
    </LinearLayout>
</layout>
