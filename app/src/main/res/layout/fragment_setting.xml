<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="contentVM"
            type="org.unimelb.itime.ui.viewmodel.MainSettingViewModel"/>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <include layout="@layout/toolbar"
        bind:vm="@{toolbarVM}"/>

    <org.unimelb.itime.widget.ITimeScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragment_background"
        android:orientation="vertical">
        <!--first line, title part-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{contentVM.onProfileClick()}"
            android:layout_marginTop="13dp"
            android:background="@drawable/bg_divider_top_bottom">
            <!--Avatar-->
            <ImageView
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                app:smallAvatar="@{contentVM.user.photo}" />
            <!--Name-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="17dp"
                android:text="@{contentVM.user.personalAlias}"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large" />

            <!--Email-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="50dp"
                android:text="@{contentVM.user.email}"
                android:textColor="@color/text_detail_label"
                android:textSize="@dimen/font_middle" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="34dp"
                android:src="@drawable/icon_qr_code"/>

            <!--right arrow-->
            <TextView
                style="@style/arrow_disclosure_indicator"/>
        </RelativeLayout>

        <!--Scan QR code part-->
        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="44dp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:onClick="@{contentVM.onQRcodeClick()}"-->
            <!--android:background="@drawable/bg_top_bottom_divider">-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="16dp"-->
                <!--android:text="Scan QR code"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="17sp" />-->

            <!--&lt;!&ndash;right arrow&ndash;&gt;-->
            <!--<TextView-->
                <!--style="@style/arrow_disclosure_indicator"/>-->

        <!--</RelativeLayout>-->

        <!--Third part-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_divider_top_bottom"
            android:orientation="vertical">
            <!--Calendar Preferences part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="16dp"
                android:onClick="@{contentVM.onCalendarPreferenceClick()}"
                >

                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_calendars" />

                <!--right arrow-->
                <TextView
                    style="@style/arrow_disclosure_indicator"/>

                <TextView style="@style/itime_bottom_divider_line" />

            </RelativeLayout>

            <!--notification part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="16dp"
                android:onClick="@{contentVM.onNotificationClick()}"
                >

                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/notifications" />

                <!--right arrow-->
                <TextView
                    style="@style/arrow_disclosure_indicator"/>

                <TextView style="@style/itime_bottom_divider_line" />
            </RelativeLayout>

            <!--language part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="16dp"
                android:onClick="@{contentVM.onLanguageClick()}">
                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_language"/>

                <!--right arrow-->
                <TextView
                    style="@style/arrow_disclosure_indicator"/>

                <TextView style="@style/itime_bottom_divider_line" />

            </RelativeLayout>

            <!--block user part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="16dp"
                android:onClick="@{contentVM.onBlockUserClick()}">

                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/blocked_users" />

                <!--right arrow-->
                <TextView
                    style="@style/arrow_disclosure_indicator"/>

            </RelativeLayout>
        </LinearLayout>

        <!--The Forth Part-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_divider_top_bottom"
            android:orientation="vertical">
            <!--help and feedback part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="16dp"
                android:onClick="@{contentVM.onHelpClick()}"
                android:visibility="gone">

                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/help_and_feedback" />

                <!--right arrow-->
                <TextView
                    style="@style/arrow_disclosure_indicator"/>

                <TextView style="@style/itime_bottom_divider_line" />
            </RelativeLayout>

            <!--about part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="16dp"
                android:onClick="@{contentVM.onAboutClick()}"
                >

                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/about" />

                <!--right arrow-->
                <TextView
                    style="@style/arrow_disclosure_indicator"/>

            </RelativeLayout>

        </LinearLayout>

        <!--Log out part-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_divider_top_bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="@string/logout"
                android:textColor="@color/black"
                android:onClick="@{contentVM.onLogOutClick()}"
                android:textSize="17sp" />
        </LinearLayout>


    </LinearLayout>
    </org.unimelb.itime.widget.ITimeScrollView>
</LinearLayout>
</layout>
