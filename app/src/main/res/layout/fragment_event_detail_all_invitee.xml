<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="contentVM"
            type="org.unimelb.itime.ui.viewmodel.event.EventDetailAllInviteesViewModel"/>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
        <import type="android.view.View"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <include layout="@layout/toolbar"
                app:vm="@{toolbarVM}"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6.5dp"
                style="@style/TabBarStyle"
                android:visibility="@{contentVM.timeslotMode?View.GONE:View.VISIBLE}"
                />
            </LinearLayout>

            <TextView
                style="@style/ListLableTextStyle"
                android:text="@{contentVM.labelString}"
                android:visibility="@{contentVM.timeslotMode?View.VISIBLE:View.GONE}"/>

        <org.unimelb.itime.ui.fragment.meeting.CusSwipeViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>