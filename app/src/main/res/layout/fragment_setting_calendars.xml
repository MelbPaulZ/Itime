<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="contentVM"
            type="org.unimelb.itime.ui.viewmodel.CalendarViewModel"/>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background">

    <include layout="@layout/toolbar"
        bind:vm="@{toolbarVM}"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_divider_top_bottom">

        <org.unimelb.itime.widget.ITimeListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            app:onItemClickListener="@{contentVM.onCalItemClicked()}"
            app:items="@{contentVM.calWrapperList}"
            app:itemBinding="@{contentVM.calItemView}"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_large"
            android:onClick="@{contentVM.onAddCalendarClick()}"
            android:text="@string/add_calendar"/>
    </LinearLayout>

</LinearLayout>
</layout>
