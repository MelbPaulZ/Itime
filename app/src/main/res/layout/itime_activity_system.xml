<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="messageGroupViewModel"
            type="org.unimelb.itime.ui.viewmodel.activity.ActivityMessageGroupViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteFive"
        android:layout_marginTop="10dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="51.5dp"
                android:background="@color/whiteFour"
                >

                <ImageView
                    android:id="@+id/system_activity_icon"
                    style="@style/ItimeCellLeftIcon"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/icon_activities_info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_toEndOf="@+id/system_activity_icon"
                    android:text="Start uploading your profile today."
                    android:textColor="@color/deepSkyBlue"
                    android:textSize="14sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</layout>
