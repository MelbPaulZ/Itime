<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/toolbar"
        bind:vm="@{toolbarVM}"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/whiteThree">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_launcher_blue"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Itime 1.0.01"
            android:textSize="@dimen/font_large"
            android:textColor="@color/warmGreyTwo"
            android:layout_marginTop="2dp"
            />
    </LinearLayout>

    <!--second part-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="13dp"
        android:background="@drawable/bg_divider_top_bottom">

        <!--Rate itime-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp">
            <TextView
                style="@style/itime_blacktitle_17sp"
                android:text="@string/rate_itime"/>

           <TextView
               style="@style/arrow_disclosure_indicator" />

            <TextView
                style="@style/itime_bottom_divider_line" />

        </RelativeLayout>


        <!--Terms of services-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp">
            <TextView
                style="@style/itime_blacktitle_17sp"
                android:text="@string/terms_of_service"/>

            <TextView
                style="@style/arrow_disclosure_indicator" />

            <TextView
                style="@style/itime_bottom_divider_line" />
        </RelativeLayout>

        <!--Privacy policy-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp">
            <TextView
                style="@style/itime_blacktitle_17sp"
                android:text="@string/privacy_policy"/>

            <TextView
                style="@style/arrow_disclosure_indicator" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
</layout>
