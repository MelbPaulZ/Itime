<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="contentVM"
            type="org.unimelb.itime.ui.viewmodel.SettingViewModel"/>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteThree">

        <include layout="@layout/toolbar"
            bind:vm="@{toolbarVM}"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <org.unimelb.itime.widget.ITimeListView
                android:background="@color/white"
                android:id="@+id/default_alert_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                />

            <TextView
                style="@style/itime_bottom_divider_line" />

        </RelativeLayout>

    </LinearLayout>
</layout>
