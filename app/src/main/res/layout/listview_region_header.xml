<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="regionWrapper"
            type="org.unimelb.itime.ui.viewmodel.SettingRegionViewModel.RegionWrapper"/>
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteThree">
    <!--title of location-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:text="@string/location"
        android:textSize="@dimen/font_middle"
        android:textColor="@color/warmGreyTwo" />

    <!--current location line-->
    <RelativeLayout
        android:id="@+id/current_location_cell"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/icon_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_red_location"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/current_location_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon_current_location"
            android:layout_marginStart="4dp"
            android:text="@string/unable_to_access_your_current_location"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_large"
            android:textColor="@color/black"
            />
        <!--bottom divider-->
        <TextView
            style="@style/itime_bottom_divider_line" />

        <!--top divider-->
        <TextView
            style="@style/itime_top_divider_line" />
    </RelativeLayout>

    <!--region lists title-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        android:text="@string/all_regions"
        android:textSize="@dimen/font_middle"
        android:textColor="@color/warmGreyTwo"
        />

</LinearLayout>
</layout>
