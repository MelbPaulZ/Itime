<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="contentVM"
            type="org.unimelb.itime.ui.viewmodel.CalendarPreferenceViewModel"/>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragment_background">
        
        <include layout="@layout/toolbar"
            bind:vm="@{toolbarVM}"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:onClick="@{contentVM.onImportGoogleClick()}"
            >

            <TextView
                style="@style/itime_top_divider_line" />

            <TextView
                style="@style/itime_blacktitle_17sp"
                android:layout_marginLeft="16dp"
                android:text="@string/setting_google_calendar"/>

            <TextView
                style="@style/arrow_disclosure_indicator" />

            <TextView
                android:layout_marginLeft="16dp"
                style="@style/itime_bottom_divider_line" />
        </RelativeLayout>


        <!--Melbourne University-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:onClick="@{contentVM.onImportUnimelbClick()}"
            >

            <TextView
                android:layout_marginLeft="16dp"
                style="@style/itime_blacktitle_17sp"
                android:text="@string/setting_melbourne_university"/>

            <TextView
                style="@style/arrow_disclosure_indicator" />

            <TextView
                style="@style/itime_bottom_divider_line" />

        </RelativeLayout>
    </LinearLayout>
</layout>
